<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cringe_author_photo"
        android:layout_width="@dimen/author_profile_picture_small"
        android:layout_height="@dimen/author_profile_picture_small"
        android:src="@drawable/ic_action_account_circle_40"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/cringe_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flowteur"
            android:textColor="@color/turquoise"
            android:textSize="@dimen/font_base_15"/>

        <TextView
            android:id="@+id/cringe_creation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cringe_author_name"
            android:text="09/06/2016"
            android:textColor="@color/light_grey"/>

    </RelativeLayout>

</LinearLayout>